<p id="notice"><%= notice %></p>

<h1>Listing Grades</h1>

<table>
  <thead>
    <tr>
      <th>Ciclo</th>
      <th>Career</th>
      <th>Session</th>
      <th>Title</th>
      <th>Credit</th>
      <th>Teacher</th>
      <th>Monday</th>
      <th>Tuesday</th>
      <th>Wednesday</th>
      <th>Thursday</th>
      <th>Friday</th>
      <th>Saturday</th>
      <th>Sunday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.ciclo %></td>
        <td><%= grade.career %></td>
        <td><%= grade.session %></td>
        <td><%= grade.title %></td>
        <td><%= grade.credit %></td>
        <td><%= grade.teacher %></td>
        <td><%= grade.monday %></td>
        <td><%= grade.tuesday %></td>
        <td><%= grade.wednesday %></td>
        <td><%= grade.thursday %></td>
        <td><%= grade.friday %></td>
        <td><%= grade.saturday %></td>
        <td><%= grade.sunday %></td>
        <td><%= link_to 'Show', grade %></td>
        <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
        <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

